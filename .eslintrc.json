{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "chai": true,
        "expect": true,
        "sinon": true
    },
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            0
        ]
    }
}
